# Server environment configuration
# Copy to server/.env for local development or testing.

NODE_ENV=development
PORT=7500
DATABASE_URL=postgresql://username:password@host:5432/gratitudejar
JWT_SECRET=change-me
# Optional: uncomment if enabling refresh tokens.
# JWT_REFRESH_SECRET=change-me-too
JWT_EXPIRES_IN=1d
SYSTEM_ACCESS_TOKEN=system-access-secret
AUTH_MOM_EMAIL=mom@example.com
AUTH_DAD_EMAIL=dad@example.com
AUTH_CHILD_EMAIL=child@example.com
CHILD_NAME=Child
CORS_ORIGINS=http://localhost:5173
CLIENT_APP_URL=http://localhost:5173
EMAIL_FROM=no-reply@gratitudejar.com
RESET_TOKEN_EXPIRES_MINUTES=60
VERIFICATION_TOKEN_EXPIRES_MINUTES=1440

# Email / SMTP (optional integrations)
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=secret
EMAIL_SMTP_FROM=no-reply@example.com
EMAIL_SMTP_TEST_RECIPIENT=ops@example.com

# Notification schedules (optional)
NOTIFICATION_DAILY_CRON=0 18 * * *
NOTIFICATION_WEEKLY_CRON=0 17 * * SUN
