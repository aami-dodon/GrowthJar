{
  "name": "rishis-jar-server",
  "version": "0.1.0",
  "description": "API server for the family Growth Jar platform",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon --watch src --exec node src/server.js",
    "start": "node src/server.js",
