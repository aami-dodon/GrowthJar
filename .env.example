# Root environment configuration
# These values are used by Docker Compose and provide defaults for both the server and client workspaces.
# Keep this file in sync with `server/.env.example` and `client/.env.example`.

# Shared configuration
NODE_ENV=development

# Server configuration
PORT=4000
DATABASE_URL=postgresql://username:password@host:5432/rishisjar
JWT_SECRET=change-me
# Optional: uncomment if the refresh token pipeline is enabled.
# JWT_REFRESH_SECRET=change-me-too
JWT_EXPIRES_IN=1d
SYSTEM_ACCESS_TOKEN=system-access-secret
AUTH_MOM_EMAIL=mom@example.com
AUTH_DAD_EMAIL=dad@example.com
AUTH_RISHI_EMAIL=rishi@example.com
CORS_ORIGINS=http://localhost:5173
CLIENT_APP_URL=http://localhost:5173
RESET_TOKEN_EXPIRES_MINUTES=60
VERIFICATION_TOKEN_EXPIRES_MINUTES=1440

# Email / SMTP (optional integrations)
EMAIL_FROM=no-reply@rishisjar.com
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=secret
EMAIL_SMTP_FROM=no-reply@example.com
EMAIL_SMTP_TEST_RECIPIENT=ops@example.com

# Notification schedules (optional)
NOTIFICATION_DAILY_CRON=0 18 * * *
NOTIFICATION_WEEKLY_CRON=0 17 * * SUN

# Client configuration
CLIENT_PORT=5173
CLIENT_CONTAINER_PORT=80
VITE_API_BASE_URL=http://localhost:4000/api
VITE_DEV_SERVER_PORT=5173
